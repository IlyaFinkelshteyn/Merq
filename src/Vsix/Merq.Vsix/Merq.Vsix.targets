<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="..\..\Merq.targets" />
	<Import Project="Merq.Vsix.BindingRedirects.targets" />

	<Target Name="GetVersion" DependsOnTargets="GitVersion" Returns="$(Version)">
		<PropertyGroup>
			<Version>$(GitSemVerMajor).$(GitSemVerMinor).$(GitSemVerPatch)</Version>
		</PropertyGroup>
	</Target>

	<Target Name="GetSystemComponent" Returns="$(IsSystemComponent)">
		<PropertyGroup>
			<IsSystemComponent>true</IsSystemComponent>
			<!-- This make it easier to test out enable/disable/uninstall of the extension during development -->
			<IsSystemComponent Condition=" '$(Configuration)' == 'Debug' ">false</IsSystemComponent>
		</PropertyGroup>
	</Target>
	
</Project>